import fetch from 'node-fetch'

$ var request = fetch('https://api.github.com/users/liqmix/repos', {
    method: 'get',
    headers: {
      'Accept': 'application/vnd.github.baptiste-preview+json'
    }}).then((response) => {return response.json()})


style {
  div.project{
    margin-bottom: 2.5em;
  }
}

site-layout
  @title -- Projects
  @content
      await(request)
        @then|response|
          for|r| of=response.reverse()
            div.project
              project repo=r
        @catch|err|
          ${err}
